<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_removeOutlier"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/footer_disable_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/remove_outlier"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/connect_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/goal"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/connect_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/ticks"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvHorizontalCm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/connect_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/horizontal_com"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_goalx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroung_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_tickx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/scan_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/arrow_right"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView  android:id="@+id/tv_no_hits"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/connect_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/vertical_com"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_goaly"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroung_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_ticky"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/scan_btn_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/arrow_right"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>