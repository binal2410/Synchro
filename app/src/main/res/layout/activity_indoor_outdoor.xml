<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroung_color"
    tools:context=".activity.LogsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textSize="@dimen/title_size"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/indoor_outdoor"
        android:textColor="@color/title_color"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/rg_indoor_outdoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_outdoor"
            style="@style/setting_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:checked="true"
            android:text="@string/outdoor" />
        <RadioButton
            android:id="@+id/rb_indoor"
            style="@style/setting_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indoor" />

    </RadioGroup>

</LinearLayout>