<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/footer_disable_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/no_hits"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/logs_item_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/avg_hit"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/max_dist"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/footer_disable_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:id="@+id/tv_no_hits"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:id="@+id/tv_avg_hit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/logs_item_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/avg_hit"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />

        <TextView
            android:id="@+id/tv_maxDistance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="@string/max_dist"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/footer_disable_color" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/footer_disable_color" />
</LinearLayout>